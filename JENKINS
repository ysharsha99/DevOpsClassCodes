pipeline{
    tools{
        jdk 'Myjava'
        maven 'Mymaven'
    }
	agent any
      stages{
           stage('Clone Repo'){
	    
               steps{
                 git 'https://github.com/ysharsha99/DevOpsClassCodes.git'
              }
          }
          stage('Compile the code'){
             
              steps{
                  
                  sh 'mvn compile'
	       }
          }
          stage('Code Analysis'){
		  
              steps{
                  sh 'mvn pmd:pmd'
              }
          }
           stage('Code test'){
		  
              steps{
                  sh 'mvn test'
              }
           }	
          
           stage( ' Build the artifact ' ){
              
              steps{
                  sh 'mvn package'
              }
                 
            }
        }
	  }
